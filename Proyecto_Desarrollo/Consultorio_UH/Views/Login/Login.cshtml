@model Consultorio_UH.Models.Login
@using System.Web.Optimization;
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/MainView.cshtml";
}
  
    <!--Fondo-->

    <section class="content">


        <div class="row">
            <!-- left column -->
            <!--/.col (left) -->
            <!-- right column -->
            <div class="col-md-8">
                <!-- Horizontal Form -->
                <div class="box box-info">
                    <div class="box-header with-border">
                        <h3 class="box-title">Iniciar Sesión</h3>
                    </div>
                    <!-- /.box-header -->
                    <!-- form start -->
                    
                   
                    @using (Html.BeginForm("Validar", "Login", FormMethod.Post, new { @class = "form-horizontal" }))
                    {
                        @Html.AntiForgeryToken()

                        <div class="box-body">
                            <div class="form-group">
                                @Html.ValidationSummary(true, String.Empty, new { @style = "color:red;!important" })
                                <label for="inputEmail3" class="col-sm-2 control-label">Correo</label>

                                <div class="col-sm-10">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-envelope"></i></span>

                                        <!--<input type="email" class="form-control" id="inputEmail3" placeholder="Email">-->
                                        @Html.TextBoxFor(c => c.Correo, new { @class = "form-control", placeholder = "Ingresa tu correo" })
                                        @Html.ValidationMessageFor(m => m.Correo, String.Empty, new { @style = "color:red;!important" })
                                    </div>

                                </div>
                            </div>
                            <div class="form-group">
                                <label for="inputPassword3" class="col-sm-2 control-label">Contraseña</label>

                                <div class="col-sm-10">
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <i class="fa fa-lock" style="width: 14px;"></i>


                                        </span>

                                        <!--<input type="password" class="form-control" id="inputPassword3" placeholder="Password">-->
                                        @Html.PasswordFor(p => p.Password, new { @class = "form-control", placeholder = "Ingresa tu contraseña" })
                                        @Html.ValidationMessageFor(m => m.Password, String.Empty, new { @style = "color:red;!important" })
                                    </div>

                                </div>
                            </div>

                        </div>
                    <!-- /.box-body -->
                        <div class="box-footer">

                            <input type="submit" value="Ingresar" class="btn btn-info pull-right" />


                        </div>
                    <!-- /.box-footer -->
                    }
                </div>
                <!-- /.box -->
                <!-- general form elements disabled -->
                <!-- /.box -->
            </div>
            <!--/.col (right) -->
        </div>
        <!-- /.row -->
    </section>

