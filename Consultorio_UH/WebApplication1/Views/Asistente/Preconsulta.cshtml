@model Consultorio_UH.Models.Preconsulta
@using System.Globalization;
@{
    ViewBag.Title = "Preconsulta";
    Layout = "~/Views/Shared/Master_Asistente.cshtml";
}

<section class="content">
    <div class="row">
        <div class="col-md-12" style="padding-left: 70px; padding-right: 70px;">

            <!-- /.box -->

            <div class="box box-info">
                <div class="box-header with-border">
                    <h3 class="box-title">Paciente Cita</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <div id="example1_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">



                        <div class="col-sm-12" style = "overflow-x: scroll;">
                            <table id="example1" class="table table-bordered table-striped dataTable" role="grid" aria-describedby="example1_info" style="width: 100%;" style="display: block;" style="overflow-x: scroll;">
                                <thead>
                                    <tr role="row">
                                        <th class="sorting_asc" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" style="width: 38px;">Id.Cita</th>
                                        <th class="sorting_asc" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" style="width: 38px;">Hora</th>
                                        <th class="sorting_asc" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" style="width: 38px;">Paciente</th>
                                        <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" style="width: 38px;">Servicio</th>
                                        <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" style="width: 38px;">Funcionario</th>
                                        <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" style="width: 38px;">Estado</th>
                                </thead>
                                <tbody></tbody>

                            </table>
                        </div>
                    </div>
                </div>

            </div>

            
                <div class="box box-info">
                    <div class="box-header with-border">
                        <h3 class="box-title">Preconsulta</h3>
                    </div>
                    <div class="box-body">
                        @Html.ValidationSummary(true, String.Empty, new { @style = "color:green;!important" })
                        <form action="" method="post"></form>
                        @using (Html.BeginForm("", "", FormMethod.Post, new { @class = "form-horizontal" }))
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-group">
                                <label for="inputName" class="col-sm-2 control-label">Motivo</label>

                                <div class="col-sm-10">
                                    
                                    @Html.TextBoxFor(Mo => Mo.Motivo, new {@type="textarea",@class = "form-control", placeholder = "Motivo", style = "width: 350px;" })
                                    @Html.ValidationMessageFor(Es => Es.Estatura, String.Empty, new { @style = "color:red;!important" })

                                </div>

                            </div>
                            <div class="form-group">
                                <label for="inputName" class="col-sm-2 control-label">Estatura (Metros)</label>

                                <div class="col-sm-10">

                                    @Html.TextBoxFor(Es => Es.Estatura, new { @Type="double",@class = "form-control", placeholder = "0,00", style = "width: 100px;" }) 
                                    @Html.ValidationMessageFor(Es => Es.Estatura, String.Empty, new { @style = "color:red;!important" })
                                   
                                </div>
                                
                            </div>
                            <div class="form-group">
                                <label for="inputName" class="col-sm-2 control-label">Peso (kg)</label>

                                <div class="col-sm-10">

                                    @Html.TextBoxFor(pe => pe.Peso, new { @Type = "double", @class = "form-control", placeholder = "0,00", style = "width: 100px;" })
                                    @Html.ValidationMessageFor(pe => pe.Peso, String.Empty, new { @style = "color:red;!important" })

                                </div>

                            </div>

                            <div class="form-group">
                                <label for="inputName" class="col-sm-2 control-label">Presion (mmHg)</label>

                                <div class="col-sm-10">

                                    @Html.TextBoxFor(pre => pre.Presion, new { @Type = "double", @class = "form-control", placeholder = "0-200", style = "width: 100px;" })
                                    @Html.ValidationMessageFor(pre => pre.Presion, String.Empty, new { @style = "color:red;!important" })

                                </div>

                            </div>
                            <div class="form-group">
                                <div class="col-sm-offset-2 col-sm-10">

                                    <button type="submit" class="btn btn-info btn-flat">Procesar</button>


                                </div>
                            </div>

                        }

                    </div>
                    <!-- /.box -->
                </div>
            
        </div>
    </div>
    <!-- /.col -->
    <!-- /.row -->
</section>