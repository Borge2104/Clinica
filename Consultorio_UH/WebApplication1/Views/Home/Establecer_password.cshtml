@model Consultorio_UH.Models.Establecer_password
@{
    ViewBag.Title = "Establecer_password";
    Layout = "~/Views/Shared/Master_Home.cshtml";
}

<section class="content">


    <div class="row">
        <!-- left column -->
        <!--/.col (left) -->
        <!-- right column -->
        <div class="col-md-8">

            <!-- Horizontal Form -->
            <div class="box box-info">
                <div class="box-header with-border">
                    <h3 class="box-title">Establecer Contraseña</h3>
                </div>
                <!-- /.box-header -->
                <!-- form start -->
                <form action="" method="post"></form>
                @using (Html.BeginForm("Establecer_password", "Home", FormMethod.Post, new { @class = "form-horizontal" }))
                {


                    @Html.AntiForgeryToken()

                    <div class="box-body">
                        <div class="form-group">

                            <label for="inputEmail3" class="col-sm-2 control-label">Correo</label>

                            <div class="col-sm-10">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-envelope"></i></span>

                                    <!--<input type="email" class="form-control" id="inputEmail3" placeholder="Email">-->
                                    @Html.TextBoxFor(c => c.Correo, new { @type = "email", @class = "form-control", placeholder = "Ingresa tu correo" })

                                </div>
                                @Html.ValidationMessageFor(c => c.Correo, String.Empty, new { @style = "color:red;!important" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputPassword3" class="col-sm-2 control-label">Nueva Contraseña</label>

                            <div class="col-sm-10">
                                <div class="input-group">
                                    <span class="input-group-addon">
                                        <i class="fa fa-lock" style="width: 14px;"></i>


                                    </span>

                                    <!--<input type="password" class="form-control" id="inputPassword3" placeholder="Password">-->
                                    @Html.PasswordFor(p => p.Password, new { @class = "form-control", placeholder = "Ingresa tu contraseña" })

                                </div>
                                @Html.ValidationMessageFor(p => p.Password, String.Empty, new { @style = "color:red;!important" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="inputPassword3" class="col-sm-2 control-label">Confirma Contraseña</label>

                            <div class="col-sm-10">
                                <div class="input-group">
                                    <span class="input-group-addon">
                                        <i class="fa fa-lock" style="width: 14px;"></i>


                                    </span>

                                    <!--<input type="password" class="form-control" id="inputPassword3" placeholder="Password">-->
                                    @Html.PasswordFor(p2 => p2.Password2, new { @class = "form-control", placeholder = "Confirma tu contraseña" })

                                </div>
                                @Html.ValidationMessageFor(p2 => p2.Password2, String.Empty, new { @style = "color:red;!important" })
                            </div>
                        </div>

                    </div>
                    <!-- /.box-body -->
                        <div class="box-footer">
                            @Html.ValidationSummary(true, String.Empty, new { @style = "color:red;!important" })

                            <input type="submit" value="Confirmar" class="btn btn-info pull-right" />


                        </div>
                    <!-- /.box-footer -->
                }


            </div>
            <!-- /.box -->
            <!-- general form elements disabled -->
            <!-- /.box -->
        </div>
        <!--/.col (right) -->
    </div>
    <!-- /.row -->
</section>








